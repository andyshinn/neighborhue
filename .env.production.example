APP_NAME=Neighborhue
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yoursite.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# Database Configuration
# Use SQLite for simple deployments, MySQL/PostgreSQL for scale
DB_CONNECTION=sqlite
# For MySQL/PostgreSQL:
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=neighborhue
# DB_USERNAME=neighborhue
# DB_PASSWORD=secure_password

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=database

# Cache Configuration - Redis recommended for performance
CACHE_STORE=redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# For file cache fallback:
# CACHE_STORE=file

# Mail Configuration (optional - not used by core functionality)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@yoursite.com"
MAIL_FROM_NAME="${APP_NAME}"

# Performance Optimization
BCRYPT_ROUNDS=12
PHP_CLI_SERVER_WORKERS=4

# Security
SESSION_SECURE_COOKIE=true